/* pages/index/index.wxss */
page {
  background-color: #f4f4f8;
}

.container {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.task-list-scroll {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
}

.task-list {
  padding: 20rpx 30rpx;
}

/* 滑动区域 */
.movable-area {
  width: 100%;
  height: 150rpx;
  margin-bottom: 20rpx;
  background-color: #f4f4f8; /* 和页面背景色一致 */
  overflow: hidden; /* 防止滑动时内容溢出 */
}

.movable-view {
  width: calc(100% + 180rpx); /* 视图宽度 = 屏幕宽度 + 删除按钮宽度 */
  height: 100%;
  display: flex;
}

/* 任务卡片 */
.task-card {
  width: 100vw; /* 确保卡片宽度为屏幕宽度 */
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  color: #333;
  transition: transform 0.2s;
}

.task-card:active {
  transform: scale(0.98);
}

.task-name {
  font-size: 36rpx;
  font-weight: 500;
}

.task-arrow {
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.4);
}

/* 删除按钮 */
.delete-btn {
  width: 180rpx;
  height: 100%;
  background-color: #e74c3c;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border-radius: 0; /* 直角 */
  transition: background-color 0.3s;
}

/* 确认删除状态的���钮 */
.delete-btn.confirm {
  background-color: #c0392b; /* 更深的红色 */
}


/* 空状态 */
.empty-state {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding-top: 30vh;
}

/* 新建悬浮按钮 */
.fab-btn {
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  transition: transform 0.2s;
}

.fab-btn:active {
  transform: scale(0.9);
}

.plus-icon {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.plus-icon::before,
.plus-icon::after {
  content: '';
  position: absolute;
  background-color: #6c63ff; /* 与创建页按钮颜色呼应 */
  border-radius: 4rpx;
}

.plus-icon::before {
  width: 100%;
  height: 8rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.plus-icon::after {
  width: 8rpx;
  height: 100%;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}
