/* pages/countdown/countdown.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  transition: background-color 0.5s ease;
  padding: 40rpx;
  box-sizing: border-box;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  height: 100%; /* 让内容撑满容器 */
}

.display-area {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-grow: 1; /* 占据所有可用垂直空间 */
}

.display-value {
  font-size: 240rpx; /* 大幅增加字体大小 */
  font-weight: 600;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', sans-serif; /* 使用更通用的系统字体 */
}

/* Loading State */
.loading-state {
  font-size: 32rpx;
  color: #888;
}